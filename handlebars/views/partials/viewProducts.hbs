<table class="table table-striped">
    {{#if productExist}}
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
    </thead>
    <tbody>
        {{#each productList}}
        <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>
                <img src="{{thumbnail}}" class="img-thumbnail" alt="{{title}}">
            </td>
        </tr>
        {{/each}}
    </tbody>
    {{else}}
        <p>No se encontraron productos</p>
    {{/if}}
</table>